pipeline{    
    
    agent any

    options {
        buildDiscarder(logRotator(numToKeepStr: '30')) 
        timeout(time: 1, unit: 'HOURS')               
    }
    
    environment {
        registry = "revolyram/djangoblog"
        serverCert = 'cert'
        registryCredential = 'DockerHub'
    }

    triggers {
        GenericTrigger(
            causeString: 'Generic Cause', 
            regexpFilterExpression: '', 
            regexpFilterText: '', 
            token: '12345'
        )
    }    
       
    stages { 
                      
        stage('Delete old blog') {
            steps {
                script {
                    try {
                        docker.withServer('tcp://3.20.118.83:4342', 'cert') {
                            sh "docker --tlsverify --tlscacert=/home/jenkins/ca.pem --tlscert=/home/jenkins/cert.pem --tlskey=/home/jenkins/key.pem -H=3.20.118.83:4342 rm -f blog"
                            echo "Old blog was deleted"
                            }
                        } catch (e) {
                            echo "Skipped stage"
                            }
                    } 
                }
            }
        
        stage('Build image') {
            steps {
                script {
                    docker.withServer('tcp://3.20.118.83:4342', serverCert) {
                       echo "Start build"
                       dockerImage = docker.build registry +":$BUILD_NUMBER"
                       echo "End build"
                       }
                    }
                }
            }
        
        stage('Push image') {
            steps { 
                script {
                    docker.withServer('tcp://3.20.118.83:4342', serverCert) {
                        docker.withRegistry( '', registryCredential ) {
                            dockerImage.push()
                            }
                        }    
                    }
                }
            }
                                  
        stage('Run blog') {
            steps { 
                script {
                    docker.withServer('tcp://3.20.118.83:4342', 'cert') {
                       dockerImage.run('-p 80:8000 --name blog')
                       }
                    }
                }
            }
        }
            
    post {
        success {
            script {
                mail bcc: '', body: 'Success', cc: '', from: '', replyTo: '', subject: 'build', to: 'revolyram@gmail.com'
                echo "SUCCES"
                }
            }
        unsuccessful {
            script {
                mail bcc: '', body: 'Unsuccessful', cc: '', from: '', replyTo: '', subject: 'build', to: 'revolyram@gmail.com'
                echo "FAILURE"
                }
            }
        }            
    }
