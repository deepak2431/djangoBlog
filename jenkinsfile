pipeline{    
    
    agent any

    options {
        buildDiscarder(logRotator(numToKeepStr: '30')) 
        timeout(time: 1, unit: 'HOURS')               
    }
    
    environment {
        registry = "revolyram/djangoblog"
        serverCert = 'cert'
        registryCredential = 'DockerHub'
    }

    triggers {
        GenericTrigger(
            causeString: 'Generic Cause', 
            regexpFilterExpression: '', 
            regexpFilterText: '', 
            token: '12345'
        )
    }
       
    stages {
        stage('Check scm') {
            steps {
                git([
                    url: "https://github.com/erlotsman/djangoBlog",
                    branch: 'master'
                ])
            }    
        }
        
        stage('Build image') {
            steps {
                script {
                    docker.withServer('tcp://3.20.118.83:4342', serverCert) {
                       dockerImage = docker.build registry + ":$BUILD_NUMBER"                     
                    }
                }
            }
        }
        
        stage('Push image') {
            steps { 
                script {
                    docker.withServer('tcp://3.20.118.83:4342', serverCert) {
                        docker.withRegistry( '', registryCredential ) {
                            dockerImage.push()
                            }
                        }    
                    }
                }
            }
        
        stage('Run blog') {
            steps { 
                script {
                    docker.withServer('tcp://3.20.118.83:4342', 'cert') {
                       dockerImage.run('-p 80:8000 --rm')
                       }
                    }
                }
            }
        
        
        stage('Delete unusing images') {
            steps {
                script {                    
                    sh "docker --tlsverify --tlscacert=/home/jenkins/ca.pem --tlscert=/home/jenkins/cert.pem --tlskey=/home/jenkins/key.pem -H=3.20.118.83:4342 rmi $registry:$BUILD_NUMBER"                       
                    }
                }    
            }
        }
    }

