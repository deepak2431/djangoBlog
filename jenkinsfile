pipeline{    
    
    agent any

    options {
        buildDiscarder(logRotator(numToKeepStr: '30')) 
        timeout(time: 1, unit: 'HOURS')               
    }
    
    environment {
        ARTIFACTORY = credentials('DockerHub')
    }

    triggers {
        GenericTrigger(
            causeString: 'Generic Cause', 
            regexpFilterExpression: '', 
            regexpFilterText: '', 
            token: '12345'
        )
    }
       
    stages {
        stage('Check scm') {
            steps {
                git([
                    url: "https://github.com/erlotsman/djangoBlog",
                    branch: 'master'
                ])
            }    
        }
        stage('Build image') {
            steps {
                script {
                    docker.withServer('tcp://3.20.118.83:4342', 'cert') {
                       def image = docker.build("revolyram/djangoBlog:${BUILD_NUMBER}"
                       image.push()
                       }
                    }
                }
            }
            
        stage('Run blog') {
            steps {
                script {
                    docker.withServer('tcp://3.20.118.83:4342', 'cert') {
                       image.run()
                    }
                }
            post {
                script {
                    mail bcc: '', body: 'Success', cc: '', from: '', replyTo: '', subject: 'build', to: 'revolyram@gmail.com'
                    }
                }
            }            
        }
    }           
}
